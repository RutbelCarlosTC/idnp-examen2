<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo del marco -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#454576" />
            <padding
                android:top="15dp"
                android:bottom="15dp"
                android:left="15dp"
                android:right="15dp" />
        </shape>
    </item>

    <!-- Espaciado interior -->
    <item
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#454576" />
        </shape>
    </item>
</layer-list>
